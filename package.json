{
  "name": "mongease-graphql",
  "version": "1.0.3",
  "description": "Mongease plugin for adding support to GraphQL schemas creation.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean:dist": "rimraf dist",
    "clean:coverage": "rimraf coverage .nyc_output",
    "clean": "npm run clean:dist && npm run clean:coverage",
    "compile": "tsc --skipLibCheck",
    "compile:watch": "tsc --skipLibCheck --watch",
    "lint": "tslint \"src/**/*.ts*\" --force",
    "test": "ava",
    "test:watch": "ava --watch",
    "coverage": "nyc --reporter=html ava",
    "report": "nyc report",
    "report:html": "open coverage/index.html",
    "prepublish": "npm run clean && npm run lint && npm run compile"
  },
  "ava": {
    "files": [
      "test/index.js"
    ]
  },
  "bugs": {
    "url": "https://github.com/fabiospampinato/mongease-graphql/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Fabio Spampinato",
    "email": "spampinabio@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fabiospampinato/mongease-graphql.git"
  },
  "keywords": [
    "mongease-plugin",
    "mongease",
    "graphql",
    "schema"
  ],
  "dependencies": {
    "@types/lodash": "^4.14.54",
    "graphql": "^0.9.1",
    "graphql-tools": "^0.10.1",
    "lodash": "^4.17.4",
    "mongoose-to-graphql": "^1.0.2",
    "tslint": "^4.5.1"
  },
  "devDependencies": {
    "ava": "^0.18.2",
    "ava-spec": "^1.1.0",
    "nyc": "^10.1.2",
    "rimraf": "^2.6.0",
    "tslint": "^4.4.2",
    "typescript": "~2.2.0"
  }
}
